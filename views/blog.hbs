<div class="content-wrapper">
    <section class="content-header">
      <h1>
        技术新闻
        <small>关于H5/JS/CSS3/NODEJS的文章</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 新闻</a></li>
        <li class="active">Content</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      {{#each entries}}
      <div class="box box-widget">
        <div class="box-header with-border">
          <div class="user-block">
            <img class="img-circle" src="/img/user.png" alt="User Image">
            <span class="title"><a href="#">{{title}}</a></span>
            <span class="postdate"><b>发布于 {{formatDate meta.createAt}}</b><i>{{timeFromNow meta.createAt}}</i></span>
          </div>
        </div>
        <div class="box-body">
          <p> {{{content}}}</p>
        </div>
      </div>
    {{/each}}
    </section>
</div>


